{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "core-js/es7/reflect": ["node_modules/core-js/proposals/reflect-metadata"],
      "core-js/es6/*": ["node_modules/core-js/es/*"],
      "@nrwl-tickets/tickets-backend": [
        "libs/tickets/backend/src/index.ts"
      ],
      "@nrwl-tickets/common-ui-material": [
        "libs/common/ui/material/src/index.ts"
      ],
      "@nrwl-tickets/common-utils": [
        "libs/common/utils/src/index.ts"
      ],
      "@nrwl-tickets/tickets-ui": [
        "libs/tickets/ui/src/index.ts"
      ],
      "@nrwl-tickets/tickets-state": [
        "libs/tickets/state/src/index.ts"
      ],
      "@nrwl-tickets/tickets-models": [
        "libs/tickets/models/src/index.ts"
      ],
      "@nrwl-tickets/users-state": [
        "libs/users/state/src/index.ts"
      ],
      "@nrwl-tickets/users-models": [
        "libs/users/models/src/index.ts"
      ],
      "@nrwl-tickets/common/state": [
        "libs/common/state/src/index.ts"
      ],
      "@nrwl-tickets/persons": [
        "libs/persons/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
